@using ProniaTask.Core.Models
@model List<Slider>
@{
    int counter = 1;
}

<div class="container">
    <div class="row">
        <div class="col-3 mb-3">
            <a asp-action="create" asp-controller="Slider"  class="btn btn-outline-primary">Create Slider</a>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Id</th>
                        <th scope="col">Title</th>
                        <th scope="col">Description</th>
                        <th scope="col">Offer</th>
                        <th scope="col">RedirectUrl</th>
                        <th scope="col">ImageFile</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th scope="row">@(counter++)</th>
                            <th scope="row">@item.Id</th>
                            <td>@item.Title</td>
                            <td>@item.Description</td>
                            <td>@item.Offer</td>
                            <td>@item.RedirectUrl</td>
                            <td><img src="~/uploads/sliders/@item.ImageUrl" width="100" height="100"/></td>
                            <td>
                                <a asp-action="update" asp-controller="slider" asp-route-id="@item.Id" class="btn btn-outline-warning">Update</a>
                                <a asp-action="delete" asp-controller="slider" asp-route-id="@item.Id" class="btn btn-outline-danger">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>