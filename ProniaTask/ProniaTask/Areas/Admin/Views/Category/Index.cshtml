@using ProniaTask.Core.Models
@model List<Category>


<div class="container">
    <div class="row">
        <div class="col-3 mb-3">
            <a asp-action="create" asp-controller="category" asp-area="Admin" class="btn btn-outline-primary">Create Category</a>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Id</th>
                        <th scope="col">Name</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th scope="row"></th>
                            <td>@item.Id</td>
                            <td>@item.Name</td>
                            
                            <td>
                                <a asp-action="update" asp-controller="category" asp-route-id="@item.Id" class="btn btn-outline-warning">Update</a>
                                <a asp-action="delete" asp-controller="category" asp-route-id="@item.Id" class="btn btn-outline-danger">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>